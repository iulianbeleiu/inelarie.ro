{% sw_extends '@Storefront/storefront/page/account/order-history/order-item.html.twig' %}

{% block page_account_order_item_context_menu_button %}
    <button class="btn dropdown-toggle order-table-header-context-menu {{ order.stateMachineState.technicalName}}"
            type="button"
            id="accountOrderDropdown"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false">
        {% sw_icon 'more-horizontal' %}
    </button>
{% endblock %}

{% block page_account_order_item_heading %}
    <h3 class="col-auto order-table-header-heading">{{ "account.orderHeadline"|trans|sw_sanitize }} {{ order.orderDateTime|format_date(pattern="dd.MM.Y", locale=app.request.locale) }}</h3>
{% endblock %}

{% block page_account_order_item_order_table_body_cell_toggle_order_details_button_text %}
    <span class="order-hide-btn-text">{{ "account.orderActionHide"|trans|sw_sanitize }} {% sw_icon 'ic-chevron-up' style {'pack' : 'shape'} %}</span>
    <span class="order-view-btn-text">{{ "account.orderActionView"|trans|sw_sanitize }} {% sw_icon 'ic-chevron-down' style {'pack' : 'shape'} %}</span>
{% endblock %}
