{% block sw_sales_channel_defaults_select %}
    {% block swag_sales_channel_defaults_select_filterable %}
        <sw-container class="sw-sales-channel-defaults-select" gap="0px 30px" columns="1fr 200px">

            {% block swag_sales_channel_defaults_select_filterable_content %}
                <template v-if="salesChannel">

                    {% block swag_sales_channel_defaults_select_filterable_content_languages %}
                        <sw-entity-multi-select
                                :disabled="disabled"
                                :class="multiSelectClass"
                                :criteria="criteria"
                                :label="propertyLabel"
                                :helpText="helpText"
                                :entityCollection="propertyCollection"
                                @change="updateCollection">
                        </sw-entity-multi-select>
                    {% endblock %}

                    {% block swag_sales_channel_defaults_select_filterable_content_default_language %}
                        <sw-entity-single-select
                                :disabled="disabled"
                                :class="singleSelectClass"
                                :criteria="criteria"
                                :label="defaultPropertyLabel"
                                :helpText="helpText"
                                :entity="propertyEntityName"
                                :value="defaultId"
                                :error="defaultsValueError"
                                required
                                @change="updateDefault">
                        </sw-entity-single-select>
                    {% endblock %}

                </template>
            {% endblock %}

        </sw-container>
    {% endblock %}
{% endblock %}