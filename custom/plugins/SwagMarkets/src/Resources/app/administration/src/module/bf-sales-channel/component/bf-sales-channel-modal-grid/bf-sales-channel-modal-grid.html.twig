{% block sw_sales_channel_grid_columns_actions %}
<sw-grid-column flex="auto"
                align="center"
                dataIndex="actions"
                class="sw-sales-channel-modal-grid__actions"
v-if="salesChannelTypes">
    <sw-button
            class="sw-sales-channel-modal__add-channel-action"
            size="small"
            variant="primary"
            @click="onAddChannel(item.id)"
            :isLoading="isProductComparisonSalesChannelType(item.id) && productStreamsLoading"
            :disabled="isProductComparisonSalesChannelType(item.id) && !productStreamsExist || item.isCreated"

            v-tooltip="{
                            message: $tc('sw-sales-channel.modal.messageNoProductStreams'),
                            showOnDisabledElements: true,
                            disabled: !isProductComparisonSalesChannelType(item.id) && !productStreamsExist
                        }">
        {{ $tc('sw-sales-channel.modal.buttonAddChannel') }}
    </sw-button>
</sw-grid-column>
{% endblock %}